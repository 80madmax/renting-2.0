@model BO.ViewModels.MessageCreateViewModel

<h2>Add Message to Units</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="SelectedUnitIds"></label>
        <select asp-for="SelectedUnitIds"
                asp-items="Model.Units"
                class="form-control select2"
                multiple="multiple"
                style="width: 100%;">
        </select>
        <span asp-validation-for="SelectedUnitIds" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Text"></label>
        <textarea asp-for="Text" class="form-control" rows="4"></textarea>
        <span asp-validation-for="Text" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Save Message</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <!-- Init Select2 -->
    <script>
        $(document).ready(function () {
            $('.select2').select2({
                placeholder: "Select one or more units",
                allowClear: true
            });
        });
    </script>
}