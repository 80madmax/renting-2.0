@model BO.ViewModels.MessageViewModel
@using BO.ViewModels

<h2>Message Details</h2>

<div>   
    <dl class="row">
        <dt class="col-sm-2">ID</dt>
        <dd class="col-sm-10">@Model.Id</dd>

        <dt class="col-sm-2">Unit</dt>
        <dd class="col-sm-10">@Model.UnitName</dd>

        <dt class="col-sm-2">Message</dt>
        <dd class="col-sm-10">@Model.Text</dd>       
    </dl>
</div>

<a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Edit</a>
<button type="button"
        class="btn btn-danger"
        data-bs-toggle="modal"
        data-bs-target="#deleteModal"
        data-entity-id="@Model.Id"
        data-entity-value="@Model.Text">
    Delete
</button>
<a asp-action="Index" class="btn btn-secondary">Back to List</a>

@await Html.PartialAsync("_DeleteModal", new DeleteModalViewModel
{
    EntityName = "Message",
    EntityValue = "", // placeholder; JS sets it dynamically
    EntityId = 0,     // placeholder; JS sets it dynamically
    ActionUrl = Url.Action("Delete", "Message")
})