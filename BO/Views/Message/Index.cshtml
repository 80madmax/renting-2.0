@model BO.ViewModels.MessageListViewModel

@{
    ViewData["Title"] = "Messages";
}

<h2>Messages</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New Message</a>
</p>

<form method="get" asp-action="Index" class="mb-3">
    <div class="form-group">
        <label for="unitSelect">Filter by Unit</label>
        <select name="unitId" asp-for="SelectedUnitId" asp-items="Model.Units" class="form-control select2" id="unitSelect">
            <option value="">-- All Units --</option>
        </select>
    </div>
    <button type="submit" class="btn btn-primary mt-2">Filter</button>
</form>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Unit</th>
            <th>Message</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var message in Model.Messages)
        {
            <tr>
                <td>@message.UnitName</td>
                <td>@message.Text</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@message.Id" class="btn btn-warning btn-sm">Edit</a>
                    <a asp-action="Details" asp-route-id="@message.Id" class="btn btn-info btn-sm">Details</a>
                    <button type="button"
                            class="btn btn-danger btn-sm"
                            data-bs-toggle="modal"
                            data-bs-target="#deleteModal"
                            data-entity-id="@message.Id"
                            data-entity-value="@message.Text">
                        Delete
                    </button>
                </td>
            </tr>
        }
    </tbody>
</table>

<div>
    @if (Model.HasPreviousPage)
    {
        <a asp-action="Index"
           asp-route-pageNumber="@(Model.PageIndex - 1)"
           asp-route-unitId="@Model.SelectedUnitId"
           class="btn btn-outline-primary">
            Previous
        </a>
    }
    Page @Model.PageIndex of @Model.TotalPages
    @if (Model.HasNextPage)
    {
        <a asp-action="Index"
           asp-route-pageNumber="@(Model.PageIndex + 1)"
           asp-route-unitId="@Model.SelectedUnitId"
           class="btn btn-outline-primary">
            Next
        </a>
    }
</div>

@section Scripts {
   
    <script>
        $(document).ready(function () {
            $('.select2').select2({
                placeholder: "Select a unit",
                allowClear: true
            });
        });
    </script>
}

<!-- Include reusable delete modal -->
@await Html.PartialAsync("_DeleteModal", new BO.ViewModels.DeleteModalViewModel
{
    EntityName = "Message",
    EntityValue = "",
    EntityId = 0,
    ActionUrl = Url.Action("Delete", "Message")
})

