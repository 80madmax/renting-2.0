@model BO.ViewModels.TransactionEditViewModel

@{
    ViewData["Title"] = "Edit Transaction";
}

<h1>@ViewData["Title"]</h1>

<form asp-action="Edit" method="post">

    <input type="hidden" asp-for="TransactionId" />

    <div class="form-group">
        <label asp-for="UnitId"></label>
        <select asp-for="UnitId" asp-items="Model.Units" class="form-control"></select>
        <span asp-validation-for="UnitId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="PaymentId"></label>
        <select asp-for="PaymentId" asp-items="Model.Payments" class="form-control"></select>
        <span asp-validation-for="PaymentId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Year"></label>
        <select asp-for="Year" asp-items="Model.Years" class="form-control"></select>
        <span asp-validation-for="Year" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Month"></label>
        <select asp-for="Month" asp-items="Model.Months" class="form-control"></select>
        <span asp-validation-for="Month" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Amount"></label>
        <input asp-for="Amount" class="form-control" />
        <span asp-validation-for="Amount" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Note"></label>
        <input asp-for="Note" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>

