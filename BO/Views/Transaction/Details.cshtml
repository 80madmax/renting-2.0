@model BO.ViewModels.TransactionViewModel
@using BO.ViewModels

<h2>Transaction Details</h2>

<div>
    <h4>@Model.Name</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">ID</dt>
        <dd class="col-sm-10">@Model.Id</dd>

        <dt class="col-sm-2">Payment</dt>
        <dd class="col-sm-10">@Model.PaymentName</dd>

        <dt class="col-sm-2">Amount</dt>
        <dd class="col-sm-10">@Model.Amount</dd>

        <dt class="col-sm-2">Month</dt>
        <dd class="col-sm-10">@Model.MonthName</dd>

        <dt class="col-sm-2">Year</dt>
        <dd class="col-sm-10">@Model.Year</dd>

        <dt class="col-sm-2">Unit</dt>
        <dd class="col-sm-10">@Model.UnitName</dd>
    </dl>
</div>

<a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Edit</a>
<button type="button"
        class="btn btn-danger"
        data-bs-toggle="modal"
        data-bs-target="#deleteModal"
        data-entity-id="@Model.Id"
        data-entity-value="@Model.Name">
    Delete
</button>
<a asp-action="Index" class="btn btn-secondary">Back to List</a>

@await Html.PartialAsync("_DeleteModal", new DeleteModalViewModel
{
    EntityName = "Transaction",
    EntityValue = "", // placeholder; JS sets it dynamically
    EntityId = 0,     // placeholder; JS sets it dynamically
    ActionUrl = Url.Action("Delete", "Transaction")
})