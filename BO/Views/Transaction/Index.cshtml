@using BO.ViewModels
@model TransactionListViewModel

@{
    ViewData["Title"] = "Transactions";
}

<h1>@ViewData["Title"]</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New Transaction</a>
</p>

<!-- Filter form -->
<form method="get" asp-action="Index" class="mb-4">
    <input type="hidden" asp-for="Filter.IsInitialLoad" value="false" />
    <div class="row">
        <div class="col-md-3">
            <label>Unit</label>
            <select asp-for="Filter.SelectedUnitId" asp-items="Model.Filter.Units" class="form-control">
                <option value="">-- All Units --</option>
            </select>
        </div>
        <div class="col-md-2">
            <label>Month</label>
            <select asp-for="Filter.SelectedMonth" asp-items="Model.Filter.Months" class="form-control">
                <option value="">-- All Months --</option>
            </select>
        </div>
        <div class="col-md-2">
            <label>Year</label>
            <select asp-for="Filter.SelectedYear" asp-items="Model.Filter.Years" class="form-control">
                <option value="">-- All Years --</option>
            </select>
        </div>
        <div class="col-md-3">
            <label>Payment</label>
            <select asp-for="Filter.SelectedPaymentId" asp-items="Model.Filter.Payments" class="form-control">
                <option value="">-- All Payments --</option>
            </select>
        </div>
        <div class="col-md-2 d-flex align-items-end">
            <button type="submit" class="btn btn-primary">Filter</button>
        </div>
    </div>
</form>

<!-- Transactions table -->
<table class="table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => Model.Transactions[0].UnitName)</th>
            <th>@Html.DisplayNameFor(model => Model.Transactions[0].Floor)</th>
            <th>@Html.DisplayNameFor(model => Model.Transactions[0].Address)</th>
            <th>@Html.DisplayNameFor(model => Model.Transactions[0].District)</th>
            <th>@Html.DisplayNameFor(model => Model.Transactions[0].PaymentName)</th>
            <th>@Html.DisplayNameFor(model => Model.Transactions[0].Month)</th>
            <th>@Html.DisplayNameFor(model => Model.Transactions[0].Year)</th>
            <th>@Html.DisplayNameFor(model => Model.Transactions[0].Amount)</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var t in Model.Transactions)
        {
            <tr>
                <td>@t.UnitName</td>
                <td>@t.Floor</td>
                <td>@t.Address</td>
                <td>@t.District</td>
                <td>@t.PaymentName</td>
                <td>@System.Globalization.CultureInfo.GetCultureInfo("en-US").DateTimeFormat.GetMonthName(t.Month)</td>
                <td>@t.Year</td>
                <td>@t.Amount.ToString("N2")</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@t.Id" class="btn btn-warning btn-sm">Edit</a>
                    <a asp-action="Details" asp-route-id="@t.Id" class="btn btn-info btn-sm">Details</a>
                    <button type="button"
                            class="btn btn-danger btn-sm"
                            data-bs-toggle="modal"
                            data-bs-target="#deleteModal"
                            data-entity-id="@t.Id"
                            data-entity-value="@t.PaymentName">
                        Delete
                    </button>
                </td>
            </tr>
        }
    </tbody>
</table>

<!-- Pagination -->
<div>
    @if (Model.HasPreviousPage)
    {
        <a asp-action="Index"
           asp-route-pageNumber="@(Model.PageIndex - 1)"
           asp-route-selectedUnitId="@Model.Filter.SelectedUnitId"
           asp-route-selectedMonth="@Model.Filter.SelectedMonth"
           asp-route-selectedYear="@Model.Filter.SelectedYear"
           asp-route-selectedPaymentId="@Model.Filter.SelectedPaymentId"
           class="btn btn-outline-primary">Previous</a>
    }

    Page @Model.PageIndex of @Model.TotalPages

    @if (Model.HasNextPage)
    {
        <a asp-action="Index"
           asp-route-pageNumber="@(Model.PageIndex + 1)"
           asp-route-selectedUnitId="@Model.Filter.SelectedUnitId"
           asp-route-selectedMonth="@Model.Filter.SelectedMonth"
           asp-route-selectedYear="@Model.Filter.SelectedYear"
           asp-route-selectedPaymentId="@Model.Filter.SelectedPaymentId"
           class="btn btn-outline-primary">Next</a>
    }
</div>

<!-- Delete Modal -->
@await Html.PartialAsync("_DeleteModal", new DeleteModalViewModel
{
    EntityName = "Transaction",
    EntityValue = "", // JS will populate
    EntityId = 0,     // JS will populate
    ActionUrl = Url.Action("Delete", "Transaction")
})
