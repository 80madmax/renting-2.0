@model BO.ViewModels.UserListViewModel

@{
    ViewData["Title"] = "Users";
}

<h1>@ViewData["Title"]</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New User</a>
</p>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(m => m.Users[0].Id)</th>
            <th>@Html.DisplayNameFor(m => m.Users[0].Name)</th>
            <th>@Html.DisplayNameFor(m => m.Users[0].RoleName)</th>
            <th>@Html.DisplayNameFor(m => m.Users[0].Email)</th>
            <th>@Html.DisplayNameFor(m => m.Users[0].Phone)</th>
            <th>@Html.DisplayNameFor(m => m.Users[0].IsActive)</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model.Users)
        {
            <tr>
                <td>@user.Id</td>
                <td>@user.Name</td>
                <td>@user.RoleName</td>
                <td>@user.Email</td>
                <td>@user.Phone</td>
                <td>
                    <input type="checkbox" disabled @(user.IsActive ? "checked" : "") />
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@user.Id" class="btn btn-warning btn-sm">Edit</a>
                    <a asp-action="Details" asp-route-id="@user.Id" class="btn btn-info btn-sm">Details</a>
                    <button type="button"
                            class="btn btn-danger btn-sm"
                            data-bs-toggle="modal"
                            data-bs-target="#deleteModal"
                            data-entity-id="@user.Id"
                            data-entity-value="@user.Name">
                        Delete
                    </button>
                </td>
            </tr>
        }
    </tbody>
</table>

<div class="mt-3">
    @if (Model.HasPreviousPage)
    {
        <a asp-action="Index" asp-route-pageNumber="@(Model.PageIndex - 1)" class="btn btn-outline-primary">Previous</a>
    }
    Page @Model.PageIndex of @Model.TotalPages
    @if (Model.HasNextPage)
    {
        <a asp-action="Index" asp-route-pageNumber="@(Model.PageIndex + 1)" class="btn btn-outline-primary">Next</a>
    }
</div>

<!-- Include reusable delete modal -->
@await Html.PartialAsync("_DeleteModal", new BO.ViewModels.DeleteModalViewModel
{
    EntityName = "User",
    EntityValue = "",
    EntityId = 0,
    ActionUrl = Url.Action("Delete", "User")
})
