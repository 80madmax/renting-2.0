@model BO.ViewModels.UnitListViewModel

@{
    ViewData["Title"] = "Units";
}

<h1>@ViewData["Title"]</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New Unit</a>
</p>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(m => m.Units[0].Id)</th>
            <th>@Html.DisplayNameFor(m => m.Units[0].Name)</th>
            <th>@Html.DisplayNameFor(m => m.Units[0].UnitTypeName)</th>
            <th>@Html.DisplayNameFor(m => m.Units[0].FloorName)</th>
            <th>@Html.DisplayNameFor(m => m.Units[0].Address)</th>
            <th>@Html.DisplayNameFor(m => m.Units[0].DistrictName)</th>
            <th>@Html.DisplayNameFor(m => m.Units[0].IsAvailable)</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var unit in Model.Units)
        {
            <tr>
                <td>@unit.Id</td>
                <td>@unit.Name</td>
                <td>@unit.UnitTypeName</td>
                <td>@unit.FloorName</td>
                <td>@unit.Address</td>
                <td>@unit.DistrictName</td>
                <td>
                    <input type="checkbox" disabled @(unit.IsAvailable ? "checked" : "") />
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@unit.Id" class="btn btn-warning btn-sm">Edit</a>
                    <a asp-action="Details" asp-route-id="@unit.Id" class="btn btn-info btn-sm">Details</a>
                    <button type="button"
                            class="btn btn-danger btn-sm"
                            data-bs-toggle="modal"
                            data-bs-target="#deleteModal"
                            data-entity-id="@unit.Id"
                            data-entity-value="@unit.Name">
                        Delete
                    </button>
                </td>
            </tr>
        }
    </tbody>
</table>

<div class="mt-3">
    @if (Model.HasPreviousPage)
    {
        <a asp-action="Index" asp-route-pageNumber="@(Model.PageIndex - 1)" class="btn btn-outline-primary">Previous</a>
    }
    Page @Model.PageIndex of @Model.TotalPages
    @if (Model.HasNextPage)
    {
        <a asp-action="Index" asp-route-pageNumber="@(Model.PageIndex + 1)" class="btn btn-outline-primary">Next</a>
    }
</div>

<!-- Include reusable delete modal -->
@await Html.PartialAsync("_DeleteModal", new BO.ViewModels.DeleteModalViewModel
{
    EntityName = "Unit",
    EntityValue = "",
    EntityId = 0,
    ActionUrl = Url.Action("Delete", "Unit")
})
