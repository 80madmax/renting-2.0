@model BO.ViewModels.UnitViewModel
@using BO.ViewModels

<h2>Unit Details</h2>

<div>
    <h4>@Model.Name</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">ID</dt>
        <dd class="col-sm-10">@Model.Id</dd>

        <dt class="col-sm-2">Name</dt>
        <dd class="col-sm-10">@Model.Name</dd>

        <dt class="col-sm-2">Floor</dt>
        <dd class="col-sm-10">@Model.FloorName</dd>

        <dt class="col-sm-2">Unit Type</dt>
        <dd class="col-sm-10">@Model.UnitTypeName</dd>

        <dt class="col-sm-2">Address</dt>
        <dd class="col-sm-10">@Model.Address</dd>

        <dt class="col-sm-2">District</dt>
        <dd class="col-sm-10">@Model.DistrictName</dd>

        <dt class="col-sm-2">City</dt>
        <dd class="col-sm-10">@Model.CityName</dd>

        <dt class="col-sm-2">Country</dt>
        <dd class="col-sm-10">@Model.CountryName</dd>

        <dt class="col-sm-2">Cost</dt>
        <dd class="col-sm-10">@Model.Cost</dd>

        <dt class="col-sm-2">Rent Price</dt>
        <dd class="col-sm-10">@Model.RentPrice</dd>
    </dl>
</div>

<a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Edit</a>
<button type="button"
        class="btn btn-danger"
        data-bs-toggle="modal"
        data-bs-target="#deleteModal"
        data-entity-id="@Model.Id"
        data-entity-value="@Model.Name">
    Delete
</button>
<a asp-action="Index" class="btn btn-secondary">Back to List</a>

@await Html.PartialAsync("_DeleteModal", new DeleteModalViewModel
{
    EntityName = "Unit",
    EntityValue = "", // placeholder; JS sets it dynamically
    EntityId = 0,     // placeholder; JS sets it dynamically
    ActionUrl = Url.Action("Delete", "Unit")
})