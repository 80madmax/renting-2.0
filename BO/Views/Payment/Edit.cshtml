@model BO.ViewModels.PaymentViewModel
@using BO.ViewModels


@{
    ViewData["Title"] = "Edit Payment";
}

<h1>@ViewData["Title"]</h1>

<form asp-action="Edit">
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label asp-for="Name" class="control-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="PaymentTypeId" class="control-label"></label>
        <select asp-for="PaymentTypeId" asp-items="Model.PaymentTypes" class="form-control"></select>
        <span asp-validation-for="PaymentTypeId" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
